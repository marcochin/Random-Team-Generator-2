<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dgtv_text"
        android:layout_width="@dimen/dialog_generic_main_element_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="24dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Add your text here" />

    <Button
        android:id="@+id/dgtv_positive_btn"
        style="@style/AppFlatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="?android:selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dgtv_text"
        app:layout_constraintVertical_bias="0"
        tools:text="Positive" />

    <Button
        android:id="@+id/dgtv_cancel_btn"
        style="@style/AppFlatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:text="@android:string/cancel"
        app:layout_constraintBaseline_toBaselineOf="@+id/dgtv_positive_btn"
        app:layout_constraintEnd_toStartOf="@+id/dgtv_positive_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>