<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="@dimen/it_padding_top"
    android:paddingEnd="16dp"
    android:paddingBottom="@dimen/it_padding_bottom">

    <TextView
        android:id="@+id/it_team_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="@dimen/it_text_size"
        android:textStyle="bold"
        tools:text="Team 1" />

    <TextView
        android:id="@+id/it_players_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/it_players_text_margin_top"
        android:textSize="@dimen/it_text_size"
        tools:text="1. Marco" />

</LinearLayout>